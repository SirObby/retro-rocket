DIR$ = ARGS$
IF DIR$ = "dir" THEN DIR$ = ""
N = GETNAMECOUNT(DIR$)
FOR X = 0 TO N
	FILE$ = GETNAME$(DIR$,X)
	IF FILETYPE$(FILE$) = "directory" THEN COLOR 9
	IF FILETYPE$(FILE$) = "file" THEN COLOR 15
	PRINT FILE$;
	COLOUR 8
	REPEAT
		PRINT " ";
	UNTIL CURRENTX > 25
	SIZE# = GETSIZE(DIR$,X)
	PRINT SIZE#;
	REPEAT
		PRINT " ";
	UNTIL CURRENTX > 35
	COLOR 7
	PRINT UPPER$(LEFT$(FILETYPE$(FILE$),1))
NEXT
IF DIR$ = "" THEN DIR$ = CSD$
COLOR 7
PRINT N; " items in " + DIR$
END
